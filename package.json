{
  "name": "signal-backend",
  "version": "0.1.0",
  "description": "Signal's backend API that orchestrates context, routing, and responses between services.",
  "type": "module",
  "main": "src/index.ts",
  "author": "Anthony Bruno",
  "license": "MIT",
  "repository": "https://github.com/anthonybruno/signal-backend.git",
  "keywords": [
    "nodejs",
    "api",
    "express",
    "llm",
    "openrouter"
  ],
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "start": "tsx src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "abruno-dev-config": "^1.0.5",
    "axios": "^1.9.0",
    "chromadb": "^2.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "tsx": "^4.20.3",
    "winston": "^3.17.0",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "commitlint": "^19.8.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,js}": [
      "prettier --write"
    ]
  }
}
